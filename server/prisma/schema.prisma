// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  password String
  username String    @unique
  Channel  Channel[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  channelID Int
  userId    String
}

model Channel {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type      String
  ownerId   String
  users     User[]
}

model ReadMessage {
  messageId String
  channelId String
  userId    String
  updatedAt DateTime @updatedAt

  @@id([channelId, userId])
}
